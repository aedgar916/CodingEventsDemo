@using CodingEventsDemo.Models;

@model List<EventCategory>;

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No categories yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Category</th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}