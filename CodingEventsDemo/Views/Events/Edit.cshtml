


<h1>@ViewBag.title</h1>

<form method="post" action="/Events/Edit">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.editEvent.Name" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" type="text" value="@ViewBag.editEvent.Description" />
    </div>

    <div class="form-group">
        <label for="location">Location</label>
        <input name="location" type="text" value="@ViewBag.editEvent.Location" />
    </div>

    <div class="form-group">
        <label for="numberOfAttendees">Number of Attendees</label>
        <input name="numberOfAttendees" type="number" value="@ViewBag.editEvent.NumberOfAttendees" />
    </div>

    <div class="form-group">
        <label for="email">Contact Email</label>
        <input name="email" type="email" value="@ViewBag.editEvent.ContactEmail" />
    </div>

    <div>
        <input type="submit" value="Save Changes" />
    </div>
    <input type="hidden" value="@ViewBag.editEvent.Id" name="eventId" />
</form>
