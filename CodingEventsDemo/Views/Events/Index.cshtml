@using CodingEventsDemo.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Events</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            @*<th>Description</th>
            <th>Event Location</th>
            <th>Number of Attendees</th>
            <th>Category</th>
            <th>Contact Email</th>
            <th>Registration Required?</th>*@
        </tr>
    
    @foreach (var meeting in Model)
    {
        <tr>
            <td>@meeting.Id</td>
            <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@meeting.Id">@meeting.Name</a></td>
            @*<td>@meeting.Description</td>
            <td>@meeting.Location</td>
            <td>@meeting.NumberOfAttendees</td>
            <td>@meeting.Category.Name</td>
            <td>@meeting.ContactEmail</td>
            <td>@meeting.NeedToRegister</td>*@
        </tr>
    }
    
    </table>
}
